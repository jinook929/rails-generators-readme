<h1>New Post</h1>

<%= form_for(@post) do |f| %>
  <!--<label>Post title:</label><br>-->
  <%= f.label :title, "Post Title" %><br>
  <%= f.text_field :title, autofocus: true %><br>

  <label>Post Description</label><br>
  <%= f.text_area :description %><br>

  <%= f.submit %>
<% end %>

<%= link_to "Back to List", posts_path %>